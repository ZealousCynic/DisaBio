
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Drop zone -->
    <FrameLayout
        android:background="#ff505050"
        android:id="@+id/dropzone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/result"
            android:text="@string/Drop_Here"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
    <!-- Dropable elements -->
    <RelativeLayout
        android:background="#ff949494"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnComedy"
            android:text="@string/btnComedyText"
            android:layout_marginTop="60dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/btnRomance"
            android:text="@string/btnRomanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnComedy" />
        <Button
            android:id="@+id/btnAnimation"
            android:text="@string/btnAnimationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnRomanceText" />
        <Button
            android:id="@+id/btnAdventure"
            android:text="@string/btnAdventureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnAnimation" />
        <Button
            android:id="@+id/btnAction"
            android:text="@string/btnActionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnAdventure" />
        <Button
            android:id="@+id/btnDrama"
            android:text="@string/btnDramaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnAction" />
        >

    </RelativeLayout>
</LinearLayout>